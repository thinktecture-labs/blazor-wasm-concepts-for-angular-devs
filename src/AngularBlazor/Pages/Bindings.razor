@page "/Bindings"
<MudText Typo="Typo.h3">Bindings</MudText>
<MudTabs Elevation="1">
    <MudTabPanel Text="Angular sample">
            <pre class="language-html">
                <code class="language-html">// One way binding
@("<my-component [parameter]=\"myProperty\"></my-component>")

// Input and output binding
@("<my-component [parameter]=\"myProperty\" (parameterChange)=\"myParameterChanged($event)\"></my-component>")

// Two way binding
@("<my-component [(parameter)]=\"myProperty\"></my-component>")

// Expression binding
@("<span>{{ myProperty }}</span>")

// Attribute binding
@("<div [class.test]=\"myProperty\"></div>")
            </code>
            </pre>
        </MudTabPanel>
        <MudTabPanel Text="Blazor sample">
            <pre class="language-html">
                <code class="language-html">// One way binding
@("<MyComponent InputParameter=\"InputValue\"></MyComponent")

// Input and output binding
@("<MyComponent InputParameter=\"InputValue\" ParameterChange=\"MyParameterChanged\"></MyComponent>")

// Two way binding
@("<MyComponent @bind-InputParameter=\"InputValue\"></MyComponent>")

// Expression binding
@("<span>@MyValue</span>")

// Expression binding to attribute
@("<MyComponent class=\"@MyClasses\"></MyComponent>")

@("// Binding attributes with the @attributes directive")
@("<div @attributes=\"MyAttributes\"></div>")
                </code>
            </pre>
        </MudTabPanel>
    <MudTabPanel Text="Use case">
        <MudList>
            <MudListItem Icon="@Icons.Material.Bookmark">Simple component with an input and output parameter.</MudListItem>
            <MudListItem Icon="@Icons.Material.Bookmark">Change Text and click button.</MudListItem>
            <MudListItem Icon="@Icons.Material.Bookmark">
                Changed text will be used in the callback and shown outside
                of the example component.
            </MudListItem>
        </MudList>
    </MudTabPanel>

    <MudTabPanel Text="Use case in action">
        <MudAlert Severity="Severity.Info">This example is written in Blazor!</MudAlert>
        <BindingSample @bind-MyParameter="MyParameterValue"></BindingSample>

        <MudCard>
            <MudCardContent>
                <MudText>MyParameterValue: <MudText Inline="true" Color="Color.Primary" Style="font-weight: bold">@MyParameterValue</MudText></MudText>
            </MudCardContent>
        </MudCard>
    </MudTabPanel>
</MudTabs>