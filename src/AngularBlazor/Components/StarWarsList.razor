<MudButton OnClick="LoadAllMovies" Variant="Variant.Filled" Color="Color.Primary">Load Star Wars movies</MudButton>

<MudList>
    @foreach (var movie in Movies.OrderBy(m => m.Episode))
    {
        <MudListItem Icon="@Icons.Material.Movie">Episode @movie.Episode - @movie.Title released in @movie.ReleaseDate.ToShortDateString()</MudListItem>
    }
</MudList>